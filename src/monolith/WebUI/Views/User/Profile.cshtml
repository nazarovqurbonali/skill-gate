@model User

@{
ViewData["Title"] = "User Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-gradient text-white text-center">
                    <h4 style="text-align: center; color: black; font-size: 30px;">User Details: @Model.UserName</h4>
                </div>
                <div class="card-body p-4">
                    <div class="mb-4">
                        <h5 class="text-muted">General Information</h5>
                        <hr class="mt-1 mb-3" />
                        <p><strong>First Name:</strong> @Model.FirstName</p>
                        <p><strong>Last Name:</strong> @Model.LastName</p>
                        <p><strong>Email:</strong> @Model.Email</p>
                        <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
                    </div>

                    <div class="mb-4">
                        <h5 class="text-muted">Admin Information</h5>
                        <hr class="mt-1 mb-3" />
                        <p><strong>Created At:</strong> @Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</p>
                        <p><strong>Created By:</strong> @(Model.CreatedBy.ToString() ?? "N/A")</p>
                        <p><strong>Created By IP:</strong> @(Model.CreatedByIp ?? "N/A")</p>

                        @if (Model.UpdatedAt.HasValue)
                        {
                        <p><strong>Updated At:</strong> @Model.UpdatedAt.Value.ToString("yyyy-MM-dd HH:mm")</p>
                        <p><strong>Updated By:</strong> @(Model.UpdatedBy.ToString() ?? "N/A")</p>
                        <p><strong>Updated By IP:</strong> @(Model.UpdatedByIp ?? "N/A")</p>
                        }

                        @if (Model.DeletedAt.HasValue)
                        {
                        <p><strong>Deleted At:</strong> @Model.DeletedAt.Value.ToString("yyyy-MM-dd HH:mm")</p>
                        <p><strong>Deleted By:</strong> @(Model.DeletedBy.ToString() ?? "N/A")</p>
                        <p><strong>Deleted By IP:</strong> @(Model.DeletedByIp ?? "N/A")</p>
                        }

                        <p><strong>Version:</strong> @Model.Version</p>
                        <p><strong>Total Logins:</strong> @Model.TotalLogins</p>
                        <p><strong>Date of Birth:</strong> @(Model.Dob?.ToString("yyyy-MM-dd HH:mm:ss") ?? "N/A")</p>
                        <p><strong>Last Password Change At:</strong> @(Model.LastPasswordChangeAt?.ToString("yyyy-MM-dd HH:mm:ss") ?? "N/A")</p>
                    </div>
                </div>
                <div class="card-footer bg-white border-0 d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to List
                    </a>
                    <a asp-action="Edit"  class="btn btn-primary">
                        <i class="fas fa-edit me-2"></i>Edit
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<style>
    .card {
        border-radius: 12px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
    }

    .bg-gradient {
        background: linear-gradient(45deg, #007bff, #0056b3);
    }

    .btn-primary {
        background: linear-gradient(135deg, #007bff, #004085);
        border: none;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        background: linear-gradient(135deg, #0056b3, #003366);
    }
</style>