@{
    ViewData["Title"] = "Page Not Found";
}

<div class="container d-flex flex-column align-items-center justify-content-center vh-100 text-center">
    <div class="card shadow-lg p-4 border-0">
        <div class="card-body">
            <i class="fas fa-exclamation-triangle text-warning display-3 mb-3"></i>
            <h1 class="display-4 text-danger fw-bold">404 - Page Not Found</h1>
            <p class="lead text-muted">
                Oops! The page you are looking for doesn't exist.<br>
                It may have been moved, deleted, or the URL was mistyped.
            </p>
            <div class="mt-4">
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                    <i class="fas fa-home"></i> Return Home
                </a>
                <a href="https://t.me/QurbonaliNazarov" class="btn btn-outline-secondary">
                    <i class="fas fa-envelope"></i> Contact Support
                </a>
            </div>
        </div>
    </div>
</div>