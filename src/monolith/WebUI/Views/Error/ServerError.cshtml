@{
    ViewData["Title"] = "Server Error";
}

<div class="container d-flex flex-column align-items-center justify-content-center vh-100 text-center">
    <div class="card shadow-lg p-4 border-0">
        <div class="card-body">
            <i class="fas fa-server text-danger display-3 mb-3"></i>
            <h1 class="display-4 text-danger fw-bold">500 - Server Error</h1>
            <p class="lead text-muted">
                An unexpected error occurred on the server.<br>
                Our team has been notified and is working to resolve the issue.
            </p>
            <div class="mt-4">
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                    <i class="fas fa-home"></i> Return Home
                </a>
                <a href="https://t.me/QurbonaliNazarov" class="btn btn-outline-secondary">
                    <i class="fas fa-envelope"></i> Contact Support
                </a>
            </div>
        </div>
    </div>
</div>