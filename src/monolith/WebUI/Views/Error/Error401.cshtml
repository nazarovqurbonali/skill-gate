@{
ViewData["Title"] = "Unauthorized";
}

<div style="margin-top: 8vh" class="container d-flex flex-column align-items-center justify-content-center  text-center">
    <div class="card shadow-lg p-4 border-0">
        <div class="card-body">
            <i class="fas fa-user-lock text-warning display-3 mb-3"></i>
            <h1 class="display-4 text-danger fw-bold">401 - Unauthorized</h1>
            <p class="lead text-muted">
                You are not authorized to view this page.<br>
                Please log in with the appropriate credentials.
            </p>
            <div class="mt-4">
                <a href="@Url.Action("Login", "Identity")" class="btn btn-primary">
                    <i class="fas fa-sign-in-alt"></i> Login
                </a>
                <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                    <i class="fas fa-home"></i> Return Home
                </a>
            </div>
        </div>
    </div>
</div>
