@model Application.Extensions.DTOs.Identity.Requests.LoginRequest

@{
    ViewData["Title"] = "Login";
}

<main style="margin-top: 1vh; display: flex; flex-direction: column;">
  <div style="display: flex; justify-content: center; align-items: center; flex-grow: 1; min-height: 10vh; overflow: hidden; background: #ffffff; color: #000000;">
    <div style="background: #ffffff; padding: 30px; border-radius: 8px; box-shadow: 0 4px 10px rgba(0,0,0,0.1); max-width: 400px; width: 100%;">
      <h2 style="text-align: center; color: rgb(8, 27, 45); margin-bottom: 1.5rem;">Login</h2>

      @if (!ViewData.ModelState.IsValid)
      {
          <div style="background: #f8d7da; color: #721c24; padding: 10px; border-radius: 5px; margin-bottom: 1rem;">
              @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
              {
                  <p style="margin: 0;">@error.ErrorMessage</p>
              }
          </div>
      }

      <form asp-controller="Identity" asp-action="Login" method="post">
          <div style="margin-bottom: 1rem;">
              <label asp-for="Login" style="display: block; margin-bottom: 0.5rem;">Username or Email</label>
              <input asp-for="Login" style="width: 100%; padding: 10px; margin-bottom: 0.5rem; border: 1px solid #ccc; border-radius: 5px;" placeholder="Enter your username or email or phone" required />
              <span asp-validation-for="Login" style="color: #dc3545;"></span>
          </div>

          <div style="margin-bottom: 1rem;">
              <label asp-for="Password" style="display: block; margin-bottom: 0.5rem;">Password</label>
              <input asp-for="Password" type="password" style="width: 100%; padding: 10px; margin-bottom: 0.5rem; border: 1px solid #ccc; border-radius: 5px;" placeholder="Enter your password" required />
              <span asp-validation-for="Password" style="color: #dc3545;"></span>
          </div>

          <button type="submit" style="background: rgb(8, 27, 45); color: #fff; border: none; padding: 10px; width: 100%; border-radius: 5px; cursor: pointer;">Login</button>
      </form>

      <p style="text-align: center; margin-top: 1rem; font-weight: bold;">
          Don't have an account?
          <a asp-controller="Identity" asp-action="Register" style="color:#1d1de2; text-decoration: none;" onmouseover="this.style.textDecoration='underline'" onmouseout="this.style.textDecoration='none'">
              Sign up here
          </a>
      </p>
    </div>
  </div>
</main>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
